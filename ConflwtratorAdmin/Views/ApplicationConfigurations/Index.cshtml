@model ConflwtratorAdmin.Models.ApplicationConfiguration

@using System.Security.Principal

@*@{
    ViewData["Title"] = "Home Page";
}*@
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link href="~/css/index.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
    <!-- Stepper CSS -->
    <link rel="stylesheet" href="https://unpkg.com/bs-stepper/dist/css/bs-stepper.min.css">
    <title>ConFLWigurator - Teams FLW Demo App Provisioning</title>

</head>

<body>
    <div class="loading">
        Loading&#8230;
    </div>
    <div>

        <div class="head d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 border-bottom shadow-sm">
            <img alt="Microsoft" title="Microsoft" src="data:image/svg+xml;base64,"
                 class="ms-logo d-inline-block align-items-center">
            <h6 class="my-0 mr-md-auto"> ConFLWigurator - Teams FLW Demo App Provisioning</h6>
            <nav class="my-2 my-md-0 mr-md-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="p-2 text-white">Welcome  @User.Identity.Name.Substring(0, (User.Identity.Name).IndexOf('@')).ToUpper()</span>
                    <a class="p-2 text-white" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Sign out</a>
                }
                else
                {
                    <a class="p-2 text-white" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Sign in</a>
                }
            </nav>
        </div>

        <div class="create-incident container-fluid">
            <div class="stepwizard">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" type="button" id="btnApplicationDetails" class="btn btn-default btn-circle ">
                            <i class="fas fa-check"></i>
                        </a>
                        <span class="nt active">Application details</span>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-2" type="button" class="btn btn-default btn-circle" id="btnTheme" disabled="disabled" onclick="checkBTNApplicationDetails()">
                            <i class="fas fa-check"></i>
                        </a>
                        <span class="nt">Themes</span>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-3" type="button" onclick="checkBtnTheme()" class="btn btn-default btn-circle" id="lobApps" disabled="disabled">
                            @*<i class="fas fa-exclamation"></i>*@
                            <i class="fas fa-check"></i>
                        </a>
                        <span class="nt">
                            Lob
                            applications
                        </span>
                    </div>
                </div>
            </div>

            <form role="form" id="mainForm" action="" method="post" enctype="multipart/form-data">
                <div class="row setup-content" id="step-1">
                    <div class="col-xs-6 col-md-offset-3" style="margin-top: 3%;">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control fc" placeholder="App Name" onchange="checkBTNApplicationDetails()" id="displayName" name="AppDisplayName" required />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control fc" placeholder="Desciption" onchange="checkBTNApplicationDetails()" id="appDesc" name="AppDescription" required />
                            </div>
                            <div class="form-group">
                                <div class="custom-file">
                                    <label class="custom-file-label choose" for="appBannerUrl">
                                        Provide Banner
                                        Image
                                    </label>
                                    <input type="file" class="custom-file-input" id="appBannerUrl" name="AppBanner" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="custom-file">
                                    <label class="custom-file-label choose" for="logoUrl">Provide logo</label>
                                    <input type="file" class="custom-file-input" id="logoUrl" name="AppLogo" />
                                </div>
                            </div>
                        </div>
                        <button class="btn nextBtn pull-right float-right" type="button" onclick="checkBTNApplicationDetails()">
                            Next <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>

                <div class="row setup-content" id="step-2">
                    <div class="col-xs-6 col-md-offset-3" style="margin-top: 3%;">
                        <div class="col-md-12">
                            <div class="form-group">
                                <select class="custom-select fc" onchange="setThemescolor()" placeholder="Select Theme" name="FontFamily" id="FontFamily" required>
                                    <option selected="">Select Font Family</option>
                                    <option value="Arial">Arial</option>
                                    <option value="Calibri">Calibri</option>
                                    <option value="Courier">Courier</option>
                                    <option value="Comic_Sans">Comic Sans</option>
                                    <option value="Helvetica">Helvetica</option>
                                    <option value="News_Gothic_MT">News Gothic MT</option>
                                    <option value="Tahoma">Tahoma</option>
                                    <option value="Times_New_Roman">Times New Roman</option>
                                    <option value="Verdana">Verdana</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="custom-select fc" onchange="setThemescolor()" placeholder="Select Font Color" name="FontColor" id="fontcolor" required>
                                    <option selected="">Select Font Color</option>
                                    <option value="Blue">Default</option>
                                    <option value="Blue">Blue</option>
                                    <option value="Grey">Grey</option>
                                    <option value="Red">Red</option>
                                    <option value="Black">Black</option>
                                    <option value="Green">Green</option>
                                    <option value="Pink">Pink</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn nextBtn pull-right float-right" type="button" onclick="checkBtnTheme()">
                            Next <i class="fas fa-chevron-right"></i>
                        </button>

                    </div>
                </div>

                <div class="row setup-content" id="step-3">
                    <div class="col-xs-6 col-md-offset-3" style="margin-top: 2%;">
                        <div class="col-md-12">
                            <button class="btn nextBtn pull-right" type='button' style="margin-bottom: 10px;">
                                Clear all
                            </button>
                            <span class="size float-right">Image size:- 80px(w) X 80px(h)</span>
                            @{ var index = 1;}

                            @for (var i = 0; i < Model.LoBapplicationDetails.Count; i++)
                            {

                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input myCheckbox" id="@string.Format("{0}{1}", "i", i+1)" onClick="return KeepCount()" name="LoBapplicationDetails[@i].AppName" value="@Model.LoBapplicationDetails[i].AppName">
                                    <label class="custom-control-label" for="@string.Format("{0}{1}", "i", i+1)">@Model.LoBapplicationDetails[i].AppName</label>
                                </div>
                                <div class="form-group">
                                    <div class="custom-file" id="@string.Format("{0}{1}", "b", i+1)">
                                        <label class="custom-file-label choose ch" for="customFile" name="AppOneImag">
                                            Select background image
                                            for @Model.LoBapplicationDetails[i].AppName
                                        </label>
                                        <input type="file" class="custom-file-input " id="customFile" name="LoBapplicationDetails[@i].AppLogo"
                                               placeholder="Provide logo" />
                                    </div>
                                </div>

                            }
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input myCheckbox" id="i8" onClick="return KeepCount()" name="Payslips" value="Payslips">
                                <label class="custom-control-label" for="i8">News Feed</label>
                            </div>
                            <div class="form-group">
                                <div class="custom-file" id="b8">
                                    @for (var i = 0; i < 5; i++)
                                    {
                                        <input type="text" class="form-control fc" placeholder="News feed URL" id="@string.Format("{0}{1}", "NewsFeed", i+1)" name="NewsFeed[@i].NewsUrl" />
                                    }
                                </div>
                            </div>

                            <input type="submit" value="Submit" class="btn nextBtn pull-right float-right" />
                        </div>
                        @if (ViewBag.Message != null)
                        {
                            <script type="text/javascript">
                                            window.onload = function () {
                                                alert("@ViewBag.Message");
                                            };
                            </script>
                        }
                    </div>
                </div>
            </form>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <!-- Stepper JavaScript -->
    <script src="https://unpkg.com/bs-stepper/dist/js/bs-stepper.min.js"></script>
    <script src="~/js/index.js"></script>
</body>

</html>